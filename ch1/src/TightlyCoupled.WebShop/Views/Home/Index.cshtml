@{
    ViewData["Title"] = "Home Page - TightlyCoupled WebShop";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to TightlyCoupled WebShop</h1>
        <p class="lead">Discover our amazing products and add them to your cart!</p>
        <div class="mt-3">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a href="/ShoppingCart" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-shopping-cart"></i> View Cart
                </a>
            }
            else
            {
                <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-lg me-2">
                    <i class="fas fa-sign-in-alt"></i> Login to Shop
                </a>
                <a href="/Identity/Account/Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus"></i> Register Now
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Featured Products</h2>
        </div>
    </div>

    <div class="row g-4">
        <!-- Product 1 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-laptop fa-4x text-secondary"></i>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Premium Laptop</h5>
                    <p class="card-text">High-performance laptop perfect for work and gaming. Features latest processor and graphics.</p>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="h4 text-primary mb-0">$899.99</span>
                            <small class="text-muted">In Stock</small>
                        </div>
                        <form method="post" action="/ShoppingCart/AddItem">
                            <input type="hidden" name="name" value="Premium Laptop" />
                            <input type="hidden" name="price" value="899.99" />
                            <div class="input-group mb-2">
                                <input type="number" name="quantity" value="1" min="1" max="10" class="form-control" style="max-width: 80px;">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <button type="submit" class="btn btn-success flex-fill">
                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                    </button>
                                }
                                else
                                {
                                    <a href="/Identity/Account/Login" class="btn btn-outline-primary flex-fill">
                                        <i class="fas fa-sign-in-alt"></i> Login to Buy
                                    </a>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

